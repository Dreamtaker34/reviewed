<% if !show.blank? %>
  <div class="col-sm-4">
    <div class="container">
      <div class="card">
        <div class="card_header">
          <h4><%= link_to "#{ truncate(show.name, :length => 30) }", controller: "welcome", action: "tvshow", id: show.id %></h4>
        </div>
        <div class="thumb">
          <% if show.poster_path.blank? %>
            <%= image_tag "no_poster.png" %>
          <% else %>
            <img src="http://image.tmdb.org/t/p/w342<%= show.poster_path %>">
          <% end %>
        <% unless show.first_air_date.blank? %>
          <div id="year">
            (<%= show.first_air_date[0 .. 3] %>)
          </div>
        <% end %>
        </div>
        <div class="info">
          <% if show.overview.blank? %>
            <p>Currently there is no description.<p/>
          <% else %>
            <p><%= truncate(show.overview, :length => 265, :separator => '.') %></p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% else %>
  <div class="container">
    <h3>No matches found. Please try again.<h3>
  </div>
<% end %>
