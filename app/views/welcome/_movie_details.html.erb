<div class="container">
  <div class="details">
    <div class="details_header">
      <h3><%= movie['title'] %><span id="header_year">(<%= movie['release_date'][0 .. 3] %>)</span></h3>
    </div>
    <div class="row">
      <div class="details_left col-sm-4">
        <div class="poster">
          <% if movie['poster_path'].blank? %>
            <%= image_tag "no_poster.png" %>
          <% else %>
            <img src="http://image.tmdb.org/t/p/w342<%= movie['poster_path'] %>">
          <% end %>
        </div>
        <div>
          <% unless movie['tagline'].blank? %>
            <div id="tagline">
              "<%= movie['tagline'] %>"
            </div>
          <% end %>
        </div>
      </div>
      <div class="details_info col-sm-8">
        <p><%= movie['overview'] %><p>
        <div class="more_info">
        <p>Genres: <% movie['genres'].each do |k| %>
          <span class="label label-default" style="background-color: #0A323F; color: #898E8F"><%= k['name'] %></span>
          <% end %>
        </p>
        <p>Runtime: <%= movie['runtime'] %>mins</p>
      </div>
    </div>
      <br style="clear:both">
      <% if user_signed_in? %>
      <div class="container">
        <div class="note" style="display:none">
          <%= render partial: 'notes/form', locals: {note: @note, movie: movie} %>
        </div>
        <span class="note-field"><%= link_to "#{@note.new_record? ? 'Make' : 'Edit'} Note", '#', class: 'btn btn-info btn-xl note-field', onClick:"javascript: openNoteField();" %></span>
      </div>
      <% end %>
    </div>
  </div>
</div>
<p> <%= movie %> </p>
