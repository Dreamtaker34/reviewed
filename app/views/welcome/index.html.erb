<div class="container"><h1>Review it.</h1></div>

<div class="container">
  <div class="jumbotron">
    <center><h3>Want to make a note about a movie for yourself?</h3></center>
    <center>
      <form method='post' data-remote='true'>
      <input name='_method' type='hidden' value='patch' />
    </form>

    <%= form_tag({:action => "search"}, {:method => "get"}) do %>
    <div id="search_box">
      <%= text_field_tag :q %>
    </div>
    <div id="search_btn">
      <%= submit_tag "Search", class: 'btn btn-info btn-xl' %>
    </div>
    <% end %>
  </center>
  </div>

  <div class="row">
    <div class="col-sm-4">
      <% if user_signed_in? %>
        <h3 class="text-left">Latest Review</h3>
        <ul>
          <li>Item 1</li>
        </ul>
      <% else %>
        <h3 class="text-center">Start making a list of what you have seen!</h3>
        <p><center><%= link_to "Get Started.", new_user_registration_path, class: 'btn btn-success' %></center></p>
      <% end %>
    </div>

    <br/><br/><br/>
    <br/><br/><br/>
    <%= select("filter", "category", [["All", 0], ["Movies", 1], ["TV Shows", 2]], {}, onChange: "javascript: onChange(event);") %>

    <h3>Movies</h3>
    <% if @movies.blank? %>
      <div class="container">
        <h3>No matches found. Please try again.<h3>
      </div>
    <% else %>
      <div id="movies" class="row">
        <%= render partial: "movies/movie", collection: @movies %>
      </div>
    <% end %>

    <h3>TV shows </h3>
    <% if @tv_shows.blank? %>
      <div class="container">
        <h3>No matches found. Please try again.<h3>
      </div>
    <% else %>
      <div id="tv-shows" class="row">
        <%= render partial: "tv_shows/tv_show", collection: @tv_shows %>
      </div>
    <% end %>
  </div>
</div>
