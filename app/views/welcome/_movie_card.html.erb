<% if !movie.blank? %>
  <div class="col-sm-4">
    <div class="container">
      <div class="card">
        <div class="card_header">
          <h4><%= link_to "#{ truncate(movie.title, :length => 30) }", controller: "welcome", action: "show", id: movie.id %></h4>
        </div>
        <div class="thumb">
          <% if movie.poster_path.blank? %>
            <%= image_tag "no_poster.png" %>
          <% else %>
            <img src="http://image.tmdb.org/t/p/w342<%= movie.poster_path %>">
          <% end %>
        <% unless movie.release_date.blank? %>
          <div id="year">
            (<%= movie.release_date[0 .. 3] %>)
          </div>
        <% end %>
        <div id="addit">
          <%= link_to "Make Note", welcome_show_path, class: 'btn btn-info btn-sm' %>
        </div>
        </div>
        <div class="info">
          <% if movie.overview.blank? %>
            <p>Currently there is no description.<p/>
          <% else %>
            <p><%= truncate(movie.overview, :length => 265, :separator => '.') %></p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% else %>
  <div class="container">
    <h3>No matches found. Please try again.<h3>
  </div>
<% end %>
