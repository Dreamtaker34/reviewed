<div class="container">
  <div class="details">
    <div class="details_header">
      <h3><%= tvshow['name'] %><span id="header_year">(<%= tvshow['first_air_date'][0 .. 3] %> - <%= tvshow['last_air_date'][0 .. 3] %>)</span></h3>
    </div>
    <div class="row">
      <div class="details_left col-sm-4">
        <div class="poster">
          <% if tvshow['poster_path'].blank? %>
            <%= image_tag "no_poster.png" %>
          <% else %>
            <img src="http://image.tmdb.org/t/p/w342<%= tvshow['poster_path'] %>">
          <% end %>
        </div>
      </div>
      <div class="details_info col-sm-8">
        <p><%= tvshow['overview'] %><p>
        <div class="more_info">
        <p>Genres: <% tvshow['genres'].each do |k| %>
          <span class="label label-default" style="background-color: #0A323F; color: #898E8F"><%= k['name'] %></span>
          <% end %>
        </p>
        <p>Seasons: <%= tvshow['number_of_seasons'] %></p>
        <p>Episodes: <%= tvshow['number_of_episodes'] %></p>
        <p>Status: <%= tvshow['status'] %></p>
      </div>
    </div>
      <br style="clear:both">
      <% if user_signed_in? %>
      <div class="container">
        <div class="note" style="display:none">
          <p>Insert Note Form here.</p>
        </div>
        <note><%= link_to "Make Note",'#', class: 'btn btn-info btn-xl' %></note>
      </div>
      <% end %>
    </div>
  </div>
</div>
<p> <%= tvshow %> </p>
