<% if show.name %>
  <div class="col-sm-4">
    <div class="container">
      <div class="card">
        <div class="header">
          <h4><%= show.name %> </h4>
        </div>
        <div class="thumb">
          <img src="http://image.tmdb.org/t/p/w342<%= show.poster_path %>">
        <div id="year">
          (<%= show.first_air_date[0 .. 3] %>)
        </div>
        <div id="addit">
          <%= link_to "Add It!", root_path, class: 'btn btn-info btn-sm' %>
        </div>
        </div>
        <div class="info">
        <p><%= truncate(show.overview, :length => 265, :separator => '.') %></p>
        </div>
      </div>
    </div>
  </div>
<% else %>
  <div class="container">
    <h3>No matches found. Please try again.<h3>
  </div>
<% end %>
